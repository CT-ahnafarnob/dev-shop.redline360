<style>
.{{section.id}} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 20px;
    padding: 20px;
    text-align: center;
    box-sizing: border-box;
    padding: 80px 40px;
    margin:auto;
 
}
.{{section.id}} .part-image {
    width: 120px;
    height: 120px;
    margin-bottom: 10px;
}
.{{section.id}} h3 {
    font-family: var(--redline-font-family);
    font-size: 18px;
    color: var(--redline-text-color);
    line-height: 27px;
    text-transform: uppercase;
}
@media (max-width: 768px) {
    .{{section.id}} {
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        padding: 20px;
    }
    .{{section.id}} .part-image {
        width: 100px;
        height: 100px;
    }
    .{{section.id}} h3 {
        font-size: 16px;
        line-height: 24px;
    }
}
</style>

<div class="{{section.id}}">
    {% for block in section.blocks %}
        <div class="part">
            <a href="{{ block.settings.part_link }}">

                {% if block.settings.part_image != blank %}
                     <img src="{{ block.settings.part_image | image_url }}" width="100" height="100" alt="{{ block.settings.part_name }}" class="part-image"/>
                     {% else %}
                        <img src="https://cdn.shopify.com/s/files/1/0607/5393/6592/files/part-1.webp?v=1757707889" width="100" height="100"  alt="No Image Available" class="part-image"/>
                {% endif %}
               
                <h3>{{ block.settings.part_name }}</h3>
            </a>
        </div>
    {% endfor %}
   
</div>     

{% schema %}
{
    "name": "Redline Parts Grid",
     "disabled_on": {
        "groups": ["header","footer"]
    },
    "settings": [
            
        ],
        "blocks": [
            {
                "type": "part",
                "name": "Part",
                "limit": 16,
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "part_image",
                        "label": "Parts Image"
                    },
                    {
                        "type": "text",
                        "id": "part_name",
                        "label": "Parts Name",
                        "default": "Parts Name"
                    },
                    {
                        "type": "url",
                        "id": "part_link",
                        "label": "Parts Link URL"
                    }
                
                ]
            }
        ],
        "presets": [
            {
                "name": "Redline Parts Grid",
                "category": "Custom Sections"
            }
        ]
}
{% endschema %}