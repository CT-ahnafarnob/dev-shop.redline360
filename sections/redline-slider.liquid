<style>
     .{{section.id}} {
        background-color: {{section.settings.background_color}};
        box-sizing: border-box;
        text-align: center;
        overflow: hidden;
        max-width: 1920px;
        margin:auto;
        word-wrap: break-word;
        word-break: break-word;
        white-space: normal;
    }
    
    .{{section.id}} .heading{
        display: flex;
        justify-content: center;
        text-align: left;
        text-align: left;
        align-items: start;
        padding: 40px 100px;
        padding-bottom: 0;
    }
    
    .{{section.id}} .heading h1 {
        font-family: var(--redline-font-family);
        font-weight: 600;
        font-size: 26px;
        line-height: 31px;
        letter-spacing: -1px;
        color: #3d4246;
        text-transform: uppercase;
        margin-top: 0;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        max-width: 600px;
    
    }
    .{{section.id}} .heading p {
        font-family: var(--redline-font-family);
        font-size: 14px;
        line-height: 22px;
        color: #a5aab0;
        font-weight: 600;
        margin-top: 0;
        margin-left: 30px;
        max-width: 75%;
    }
    .responsive {
        margin: 10px 100px;
    }
    .responsive img {
        width: 100%;
        height: 250px;
        object-fit: contain;
        }
   .{{section.id}} .product-slide{
        padding: 10px;
   }
     .slick-prev:before,
     .slick-next:before {
    font-size: 25px;
    color: #000000;
    position: relative;
    top: -5rem;
}

@media (max-width:768px){
    .{{section.id}} .heading {
        flex-direction: column;
        padding: 5px;
        gap: 0;
    } 
        
    .{{section.id}} .heading h1 {
        width: 100%;
        align-items: center;
        text-align: center;
        padding: 10px
       
    }
     .{{section.id}} .heading p {
        padding: 0 2px;
        text-align: left;
        margin: 2px;
       
    }
    .slick-prev:before,
     .slick-next:before {
    font-size: 25px;
    color: #000000;
    position: relative;
    top: -3rem;
}
}

</style>

<section class="{{ section.id }}">
    <div class="heading">
        <h1>{{ section.settings.heading }}</h1>
        <p>{{ section.settings.content }}</p>
    </div>
    
    <div class="responsive">
        {% for product in collections[section.settings.featured_collection].products %}
            
            <div class="product-slide">
               
            <a href="{{ product.url }}">
                <img src="{{ product.featured_image | image_url: width: 300, height: 300 }}" 
                        alt="{{ product.featured_image.alt | escape }}" 
                        width="300" 
                        height="300">
            </a>
                
                <a href="{{ product.url }}" class="product-title">{{ product.title }}</a>

                <div class="product-price">${{ product.price | money_without_currency }}</div>
                
            </div>
            
        {% endfor %}
    </div>
</section>

<script defer>
document.addEventListener('DOMContentLoaded', function() {
$('.responsive').slick({
    arrows: true,
    dots: false, 
    infinite: true,
    speed: 600,
    slidesToShow: 5,
    slidesToScroll: 3,
    prevArrow: '<button type="button" class="slick-prev"></button>',
    nextArrow: '<button type="button" class="slick-next">Next</button>',

  responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 3,
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
});
});

</script>
{% schema %}
{
    "name": "Redline Slider",
    "disabled_on": {
        "groups": ["header", "footer"]
    },
    "settings": [
            {
            "type": "text",
            "id": "heading",
            "label": "Heading Left",
            "default": "Customer Favorites"
        },
        {
            "type": "textarea",
            "id": "content",
            "label": "Description",
            "default": "Browse our most popular performance car parts and truck accessories. From aftermarket headlights and tail lights to suspension upgrades like coilovers and lowering springs, these top picks deliver the performance and style youâ€™re looking for. See what other gearheads are loving!"
        },
        {
            "type": "collection",
            "id": "featured_collection",
            "label": "Choose Collection"
        }
       
        ],
        "presets": [
                {
                     "name": "Redline Slider",
                     "category": "Custom Slider"
                }
        ]
}
{% endschema %}