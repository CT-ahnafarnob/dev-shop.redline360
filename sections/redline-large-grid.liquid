<style>
.{{section.id}} {
    background-color: var(--redline-ash-color);
    box-sizing: border-box;
    text-align: center;
    overflow: hidden;
    padding: 0; /* Default: no padding (for desktop widths like 816px) */
}

.{{section.id}} .heading{
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    text-align: left;
    align-items: start;
    padding: 50px 50px 10px 50px;
}

.{{section.id}} .heading h1 {
    font-family: var(--redline-font-family);
    font-weight: 600;
    font-size: 28px;
    line-height: 36px;
    letter-spacing: -2px;
    color: white;
    text-transform: uppercase;
    margin-top: 0;
}

.{{section.id}} .heading p {
    font-family: var(--redline-font-family);
    font-size: 14px;
    line-height: 22px;
    color: #ffffff;
    font-weight: 400;
    margin-top: 0;
}

.{{section.id}} .grid-container {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    justify-items: center;
    gap: 20px;
    text-align: center;
    box-sizing: border-box;
    padding: 20px 50px;
}

.{{section.id}} .grid-container .parts-image {
    width: 230px;
    height: 320px;
    margin: 0;
    object-fit: cover;
}

.{{section.id}} .grid-container a {
    position: relative;
}

.{{section.id}} .grid-container a::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 8px;
    background-color: rgba(0, 0, 0, 0.3); 
    z-index: 1;
}

.{{section.id}} .text {
    position: absolute;
    bottom: 10px;
    left: 8%;
    z-index: 2;
}

.{{section.id}} .text h3 {
    font-family: var(--redline-font-family);
    font-size:18px;
    line-height: 20px;
    text-transform: uppercase;
    font-weight: 600;
    color: #fff;
    text-align: left;
    width: 100%;
}

/* Mobile (<=768px) */
@media (max-width: 768px) {
    .{{section.id}} .heading{
        grid-template-columns: 1fr;
        padding: 20px;
        text-align: left;
    }
    .{{section.id}} .heading h1 {
        font-size: 24px;
        line-height: 30px;
    }
    .{{section.id}} .heading p {
        font-size: 14px;
        line-height: 20px;
    }
    .{{section.id}} .grid-container {
        grid-template-columns: repeat(2,1fr);
        padding: 20px;
        gap: 10px;
    }
    .{{section.id}} .grid-container .parts-image {
        width: 150px;
        height: 220px;
    }
}

/* Laptops and larger screens (>=1000px) */
@media (min-width: 1000px) {
    .{{section.id}} {
        padding: 20px 100px; 
    }
}
</style>


<section class="{{section.id}}">
   
        <div class="heading">
        <h1>{{ section.settings.heading }}</h1>
        <p>{{ section.settings.content }}</p>
        </div>
    <div class="grid-container">

        {% for block in section.blocks %}
        <a href="{{ block.settings.link }}">
            {% if block.settings.parts_image != blank %}
                <img src="{{ block.settings.parts_image | image_url }}" width="100" height="100" alt="{{ block.settings.parts_name }}" class="parts-image"/>
                     {% else %}
                <img src="https://cdn.shopify.com/s/files/1/0607/5393/6592/files/car-1.webp?v=1757733385" width="100" height="100" alt="No Image Available" class="parts-image"/>
            {% endif %}
            <div class="text">
            <h3>{{ block.settings.parts_name }}</h3>
        </div>
        </a>
        
    {% endfor %}
    </div>

</section>

{% schema %}
{
    "name": "Redline Large Grid",
    "disabled_on": {
        "groups": ["header","footer"]
    },
    "settings": [
        {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading Left",
                        "default": "Browse Our Latest Performance Car Parts"
                    },
                    {
                        "type": "text",
                        "id": "content",
                        "label": "Description",
                        "default": "Time to upgrade—new performance parts just hit our store! From advanced coilovers and upgraded suspension to high-flow air filters and fuel management kits, we’ve got the latest gear to improve your ride’s power and handling. Get your hands on the newest performance parts online."
                    }
        ],
        "blocks": [
            {
                "type": "car_parts",
                "name": "Latest Parts",
                "limit": 15,
                "settings": [
                    
                    {
                        "type": "image_picker",
                        "id": "parts_image",
                        "label": "Select Parts Image"
                    },
                    {
                        "type": "text",
                        "id": "parts_name",
                        "label": "Parts Name",
                        "default": "Tein Coilovers - street basis Z advanceed - Nissan 350Z"
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "Parts Link URL"
                    }
                
                ]
    
            }
        ],
        "presets": [
            {
                "name": "Redline Large Grid",
                "category": "Custom Sections"
            }
        ]
}
{% endschema %}